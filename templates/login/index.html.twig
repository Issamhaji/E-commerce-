{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <h1>Login</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <label for="username" class="mt-3">Email:</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required>

            <label for="password" class="mt-3">Password:</label>
            <input type="password" class="form-control" id="password" name="_password" required>


            <input type="hidden" name="_target_path" value="{{ path('app_account') }}">

            <button type="submit" class="btn btn-success">login</button>
        </form>

        <br/>
        <a href="{{ path('app_register') }}">register</a>
    </div>

{% endblock %}
